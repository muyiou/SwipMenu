<com.wz.swipmenu.RecentsPanelView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recents_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/recents_bg_protect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true" >

        <com.wz.swipmenu.RecentsVerticalScrollView
            android:id="@+id/recents_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:divider="@null"
            android:fadingEdge="vertical"
            android:scrollbars="none"
            android:stackFromBottom="true" >

            <LinearLayout
                android:id="@+id/recents_linear_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
            </LinearLayout>
        </com.wz.swipmenu.RecentsVerticalScrollView>

        <TextView
            android:id="@+id/recents_no_apps"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible" />
    </FrameLayout>

    <com.wz.swipmenu.StatusBarTouchProxy
        android:id="@+id/status_bar_touch_proxy"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

</com.wz.swipmenu.RecentsPanelView>